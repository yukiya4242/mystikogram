<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
<section class="vh-50" style="background-color: #eee;">
  <div class="container h-50">
    <div class="row d-flex justify-content-center align-items-center h-50">
      <div class="col-sm-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                <form class="mx-1 mx-md-4">

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= text_field_tag 'name', nil, class: 'form-control', id: 'form3Example1c', placeholder: "Name" %>
                      <%= f.label :name, class: "form_label" %>
                    </div>
                  </div>


                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.email_field :email, class: 'form-control', id: 'form3Example1c', placeholder: "Email" %>
                      <%= f.label :email, class: "form_lable" %>
                    </div>
                  </div>


                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%# if @minimum_password_length %>
                      <%= f.password_field :password, id: "form3Example4c", class: 'form-control', placeholder: "Password" %>
                      <%= f.label :password, class: "form-label" %>
                    </div>
                  </div>


                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                     <%= f.password_field :password, id: "form3Example4c", class: 'form-control', placeholder: "Password" %>
                      <%= f.label :password, class: "form-label" %>
                    </div>
                  </div>

                  <div class="form-check d-flex justify-content-center mb-5">
                    <%= check_box_tag :agreement, value: 'agree', class: 'form-check-input me-2', id: 'form2Example3c' %>
                    <label class="form-check-label" for="form2Example3">
                         I agree all
                    </label>
                  </div>


                  <!--    <%#= f.submit "Sign up" %>-->

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <%= f.submit "Register", class: 'btn btn-primary btn-lg' %>
                  </div>
                  <% end %>

                </form>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

               <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">




              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>













